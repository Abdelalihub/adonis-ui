<Window x:Class="AdonisUI.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdonisUI.Demo"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
        mc:Ignorable="d"
        Title="Adonis UI"
        Width="1280"
        Height="720">

    <Window.Style>
        <Style TargetType="Window"
               BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ButtonDemo.xaml"/>
                <ResourceDictionary Source="ContainerDemo.xaml"/>
                <ResourceDictionary Source="InputDemo.xaml"/>
                <ResourceDictionary Source="ListDemo.xaml"/>
                <ResourceDictionary Source="TextDemo.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <DockPanel LastChildFill="True"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch">
            
            <Grid DockPanel.Dock="Top">

                <Border Background="{DynamicResource {x:Static adonisUi:Brushes.AccentBrush}}"
                        adonisExtensions:LayerExtension.Layer="3">
                    
                    <Button Style="{DynamicResource {x:Static adonisUi:Styles.AccentToolbarButton}}"
                            HorizontalAlignment="Left"
                            Content=">"
                            Width="24"
                            Height="24"
                            Margin="8"/>

                </Border>

            </Grid>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <GroupBox>
                        <GroupBox.Header>
                            <TextBlock Text="Header"/>
                        </GroupBox.Header>

                        <Button Content="Change Theme"
                                Style="{DynamicResource {x:Static adonisUi:Styles.AccentButton}}"
                                Click="ChangeTheme"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Top"/>

                    </GroupBox>
                </Grid>

                <Grid Grid.Column="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Margin="8, 8, 0, 0">
                        <ScrollViewer>
                            <StackPanel Orientation="Vertical">
                                <ContentPresenter ContentTemplate="{StaticResource InputDemoTemplate}"/>
                                <ContentPresenter ContentTemplate="{StaticResource ButtonDemoTemplate}" Margin="0, 8"/>
                                <ContentPresenter ContentTemplate="{StaticResource TextDemoTemplate}"/>
                                <ContentPresenter ContentTemplate="{StaticResource ListDemoTemplate}" Margin="0, 8"/>
                                <ContentPresenter ContentTemplate="{StaticResource ContainerDemoTemplate}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <GroupBox Grid.Column="1"
                              Grid.Row="0"
                              Margin="8, 0, 0, 0"
                              adonisExtensions:LayerExtension.Layer="1">

                        <Grid>
                            <ScrollViewer>
                                <StackPanel Orientation="Vertical">
                                    <ContentPresenter ContentTemplate="{StaticResource InputDemoTemplate}"/>
                                    <ContentPresenter ContentTemplate="{StaticResource ButtonDemoTemplate}" Margin="0, 8"/>
                                    <ContentPresenter ContentTemplate="{StaticResource TextDemoTemplate}"/>
                                    <ContentPresenter ContentTemplate="{StaticResource ListDemoTemplate}" Margin="0, 8"/>
                                    <ContentPresenter ContentTemplate="{StaticResource ContainerDemoTemplate}"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Column="0"
                              Grid.Row="1"
                              Margin="8, 0, 0, 0"
                              adonisExtensions:LayerExtension.Layer="1">

                        <GroupBox adonisExtensions:LayerExtension.Layer="2">

                            <Grid>
                                <ScrollViewer>
                                    <StackPanel Orientation="Vertical">
                                        <ContentPresenter ContentTemplate="{StaticResource InputDemoTemplate}"/>
                                        <ContentPresenter ContentTemplate="{StaticResource ButtonDemoTemplate}" Margin="0, 8"/>
                                        <ContentPresenter ContentTemplate="{StaticResource TextDemoTemplate}"/>
                                        <ContentPresenter ContentTemplate="{StaticResource ListDemoTemplate}" Margin="0, 8"/>
                                        <ContentPresenter ContentTemplate="{StaticResource ContainerDemoTemplate}"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </GroupBox>
                    </GroupBox>

                    <GroupBox Grid.Column="1"
                              Grid.Row="1"
                              Margin="8, 0, 0, 0"
                              adonisExtensions:LayerExtension.Layer="2">

                        <GroupBox adonisExtensions:LayerExtension.Layer="3">

                            <Grid>
                                <ScrollViewer>
                                    <StackPanel Orientation="Vertical">
                                        <ContentPresenter ContentTemplate="{StaticResource InputDemoTemplate}"/>
                                        <ContentPresenter ContentTemplate="{StaticResource ButtonDemoTemplate}" Margin="0, 8"/>
                                        <ContentPresenter ContentTemplate="{StaticResource TextDemoTemplate}"/>
                                        <ContentPresenter ContentTemplate="{StaticResource ListDemoTemplate}" Margin="0, 8"/>
                                        <ContentPresenter ContentTemplate="{StaticResource ContainerDemoTemplate}"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </GroupBox>
                    </GroupBox>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>

</Window>
