<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:adonisUi="clr-namespace:AdonisUI">

    <!-- colors -->

    <Color x:Key="{x:Static adonisUi:Colors.AccentColor}">#5080d8</Color>
    <Color x:Key="{x:Static adonisUi:Colors.AccentDarkerColor}">#436BB5</Color>
    <Color x:Key="{x:Static adonisUi:Colors.AccentLighterColor}">#6C9CF6</Color>

    <Color x:Key="{x:Static adonisUi:Colors.Level0BackgroundColor}">#ffffff</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Level0BorderColor}">#f0f0f0</Color>

    <Color x:Key="{x:Static adonisUi:Colors.Level1BackgroundColor}">#f0f0f0</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Level1BorderColor}">#b8b8b8</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Level1HighlightColor}">#f4f4f4</Color>
    
    <Color x:Key="{x:Static adonisUi:Colors.Level2BackgroundColor}">#e8e8e8</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Level2BorderColor}">#c8c8c8</Color>
    
    <Color x:Key="{x:Static adonisUi:Colors.Level3BackgroundColor}">#b0b0b0</Color>
    <Color x:Key="{x:Static adonisUi:Colors.Level3BorderColor}">#a0a0a0</Color>

    <Color x:Key="{x:Static adonisUi:Colors.ForegroundColor}">#303030</Color>
    <Color x:Key="{x:Static adonisUi:Colors.AccentForegroundColor}">#ffffff</Color>

    <Color x:Key="{x:Static adonisUi:Colors.DisabledForegroundColor}">#808080</Color>

    <!-- brushes -->

    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.AccentBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.AccentColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.AccentDarkerBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.AccentDarkerColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.AccentLighterBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.AccentLighterColor}}"/>

    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level0BackgroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level0BackgroundColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level0BorderBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level0BorderColor}}"/>
    
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level1BackgroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level1BackgroundColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level1BorderBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level1BorderColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level1HightlightBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level1HighlightColor}}"/>
    
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level2BackgroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level2BackgroundColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level2BorderBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level2BorderColor}}"/>
    
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level3BackgroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level3BackgroundColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.Level3BorderBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.Level3BorderColor}}"/>

    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.ForegroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.ForegroundColor}}"/>
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.AccentForegroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.AccentForegroundColor}}"/>
    
    <SolidColorBrush x:Key="{x:Static adonisUi:Brushes.DisabledForegroundBrush}" Color="{DynamicResource {x:Static adonisUi:Colors.DisabledForegroundColor}}"/>

</ResourceDictionary>